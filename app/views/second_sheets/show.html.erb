<h3>詳細</h3>
<div class="second_sheet">
  <p><%= @second_sheet.sheet %></p>
  <p><%= @second_sheet.created_at %></p>
  <%= image_tag @second_sheet.two_image_url, size: "250x200" if @second_sheet.two_image? %>
</div>

<div class="second_sheets-container">
  <% @second_sheets.each do |t| %>
    <div class="second_sheet">
      <%= t.two_title %>
      <%= t.two_body %>
      <%= image_tag @second_sheet.two_image_url, size: "250x200" if @second_sheet.two_image? %>
    </div>
  <% end %>
</div>

<%= link_to "一覧に戻る", folders_path %>
