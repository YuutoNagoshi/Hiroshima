<h3>詳細</h3>
<%= link_to "内容投稿ページへ",   new_folder_second_folder_third_folder_path(params[:folder_id], @second_folder.id) %>


<div class="second_folder">
  <p><%= @second_folder.two_title %></p>
  <p><%= @second_folder.two_body %></p>
  <%= image_tag @second_folder.two_image_url, size: "250x200" if @second_folder.two_image? %>
  <p><%= @second_folder.created_at %></p>
</div>


<div class="second_sheets-container">
  <% @third_sheets.each do |t| %>
    <div class="third_sheet">     
      <%= t.three_title %>
      <%= t.three_body %>
      <%= image_tag t.three_image_url, size: "250x200" if t.three_image? %>
    </div>
  <% end %>
</div>

<%= link_to "一覧に戻る", folders_path %>

