<button type="button" class="btn btn-secondary"><%= link_to "作成する", new_folder_path %></button>

<div class="folders-container">
  <div class="row">
   
      <% @folders.each do |t| %>
        <div class="col-sm-4 box1">
          <div class="folder">
            <div class="card text-white mb-3" style="max-width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= t.folder %></h5>
              <%= link_to "詳細", folder_path(t.id),class: 'btn' %>
              <%= button_to "削除", folder_path(t.id),class: 'button', method: :delete, data: { confirm: "削除しますか？" } %>
            </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>

<div class="sheets-container">
  <div class="row">

  <% @sheets.each do |t| %>
    <div class="col-sm-4 box1">
      <div class="sheet">
    
      <div class="card text-white #3a3e41 mb-3" style="max-width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= t.title %></h5>
              <%= t.body %>
              <%= link_to t.image_url, "data-lightbox": t.image_url do %>
              <%= image_tag t.image_url, size: "250x200", class:"img"%>
              <% end %>
              <%= button_to "削除", sheet_path(t.id),class: 'button', method: :delete, data: { confirm: "削除しますか？" } %>
            </div>
          </div>
      </div>
    </div>  
  <% end %>
</div>

